{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "name": "Comment"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "comment": {
      "type": "richtext",
      "required": true
    },
    "author": {
      "via": "comments",
      "plugin": "users-permissions",
      "model": "user"
    },
    "post": {
      "via": "comments",
      "model": "post"
    },
    "replies": {
      "via": "comment",
      "collection": "reply"
    }
  }
}
